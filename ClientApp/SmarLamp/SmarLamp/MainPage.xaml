                Grid.Row="3"
                Grid.Column="0"
                Margin="15,0,0,0"
                VerticalTextAlignment="Center"
            />

            <Slider
                x:Name="Blue"
                Minimum="0"
                Maximum="255"
                ThumbColor="Blue"
                Grid.Row="3"
                Grid.Column="1"
                MinimumTrackColor="DarkBlue"
                MaximumTrackColor="White"
                ValueChanged="Blue_ValueChanged"
             />

            <Label
                x:Name="BlueLabel"
                Text="000"
                FontSize="Large"
                TextColor="Black"
                Grid.Row="3"
                Grid.Column="2"
                VerticalTextAlignment="Center"
            />

            <Label
                Text="Use Pattern:"
                FontSize="Large"
                TextColor="Black"
                Grid.Row="4"
                Grid.Column="0"
                Margin="15,0,0,0"
                Grid.ColumnSpan="2"
                VerticalTextAlignment="Center"
            />

            <Switch 
                x:Name="UsePatternSwitch"
                Grid.Row="4"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="0,0,15,0"
                Toggled="UsePatternSwitch_Toggled"
             />

        </Grid>

        <Picker 
            x:Name="DevicePicker"
            Title="Pick a device"
            FontSize="Large"
            TextColor="Black"
            Margin="15,0,15,0"
            TitleColor="Black"
            SelectedIndexChanged="DevicePicker_SelectedIndexChanged"
        />

        <Button
            Text="TURN ON"
            TextColor="Black"
            FontSize="Large"
            Clicked="LampOnOff"
            Margin="15,0,15,0"
        />

    </StackLayout>

</ContentPage>
